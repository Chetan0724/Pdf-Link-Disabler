{
  "manifest_version": 3,
  "name": "PDF Link Disabler",
  "version": "1.0",
  "description": "A Chrome extension to disable internal links in PDFs.",
  "permissions": ["downloads", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["libs/pdf-lib.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
